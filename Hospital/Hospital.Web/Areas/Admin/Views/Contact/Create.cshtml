@model Hospital.ViewModels.ContactViewModel

@{
    ViewData["Title"] = "Create Contact";
}

<h2>Create Contact</h2>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" asp-controller="Contact" method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label"></label>
                <input asp-for="Phone" class="form-control" required />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="HospitalInfoId" class="form-label"></label>
                <select asp-for="HospitalInfoId" class="form-select" required>
                    <option value="">-- Select Hospital --</option>
                    @if (ViewBag.Hospitals != null)
                    {
                        @foreach (var hospital in ViewBag.Hospitals)
                        {
                            <option value="@hospital.Id">@hospital.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="HospitalInfoId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
